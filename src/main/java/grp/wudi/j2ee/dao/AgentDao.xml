    <insert id="addAgent" parameterType="grp.wudi.j2ee.entity.Agent">
INSERT INTO tb_agent ( agent_name, agent_sex, agent_tel, agent_email, agent_profile, agent_registertime, agent_account, agent_password)
VALUES
	(#{agentName},#{agentSex},#{agentTel},#{agentEmail},#{agentProfile},#{agentRegistertime},#{agentAccount},#{agentPassword})

    </insert>
    <delete id="dateleAgent" parameterType="int">
		DELETE FROM tb_agent
