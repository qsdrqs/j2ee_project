<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="grp.wudi.j2ee.dao.NewsDao">
    <select id="findById" parameterType="int" resultType="grp.wudi.j2ee.entity.News">
        SELECT
        news_id,
        title,
        content_path,
        type,
        create_time,
        FROM
        news
        WHERE news_id = #{id}
    </select>

    <select id="findAll" resultType="grp.wudi.j2ee.entity.News">
        SELECT * FROM news
    </select>

    <!-- 糢糊查询，只能查标题-->
    <select id="findByKeyword" resultType="grp.wudi.j2ee.entity.User">
        SELECT
        news_id,
        title,
        content_path,
        type,
        create_time,
        FROM
        news
        WHERE 
        <!--TODO:$映射-->
        news_id LIKE '%${keyword}%'
    </select>

    <insert id="addNews" keyProperty="newsId" useGeneratedKeys="true" parameterType="grp.wudi.j2ee.entity.News">
        INSERT INTO 
        news(title,content_path,type,create_time)
        VALUES
        (#{newsId},#{title},#{contentPath},#{type},#{createTime})
    </insert>

    <update id="update" parameterType="grp.wudi.j2ee.entity.News">
        UPDATE news
        SET
        title = #{title},
        content_path = #{contentPath},
        type = #{type},

        WHERE user_id = #{userId}
    </update>

    <delete id="removeNews" parameterType="int">
        DELETE FROM news
        WHERE user_id = #{id}
    </delete>
</mapper>
